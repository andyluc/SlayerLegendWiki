          "maxSubmissionsPerHour": 5
        },
        "showOnHomePage": true,
        "homePageLimit": 3
      },
      "videoGuides": {
        "enabled": true,
        "allowSubmissions": true,
        "allowRawUpload": true,
        "requireAuthentication": false,
        "requireApproval": true,
        "dataFile": "public/data/video-guides.json",
        "categories": ["beginner", "intermediate", "advanced", "farming", "promotion"],
