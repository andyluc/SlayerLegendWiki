  "storage": {
    "backend": "github",
    "version": "v1",
    "migration": {
      "enabled": false
    },
    "github": {
      "owner": "BenDol",
      "repo": "SlayerLegendWiki"
    },
    "cloudflare": {
      "keyPrefix": "slayerwiki",
      "namespaceName": "SLAYER_WIKI_DATA"
    }
  },
  "features": {
    "search": true,
    "tableOfContents": true,
    "pageHistory": true,
    "editPages": true,
    "darkMode": true,
    "tags": true,
    "buildSharing": true,
    "calculators": true,
    "progressTracking": true,
    "autoFormatPageTitles": true,
    "purgeClientCacheOnUpdate": false,
    "preserveDraftsOnUpdate": true,
    "forceRelogOnUpdate": false,
    "enableRemoteLoggingInDev": true,
    "developmentBanner": {
      "enabled": true,
      "expiryMinutes": 60
    },
    "customHomePage": {
      "enabled": false,
      "path": "home.md"
    },
    "sidebarTreeLines": {
      "enabled": true,
      "width": 1,
      "style": "solid"
    },
    "starContributor": {
      "enabled": true,
      "icon": "â­"
    },
    "comments": {
      "enabled": true,
      "label": "wiki-comments"
    },
    "editRequestCreator": {
      "mode": "auto",
      "forks": {
        "enabled": true,
        "autoSync": true,
        "keepForkUpdated": true
      },
      "anonymous": {
        "enabled": true,
        "mode": "server",
        "requireEmailVerification": true,
        "serverEndpoint": "",
        "attributionFormat": "Contributed anonymously via wiki editor",
        "reCaptcha": {
          "enabled": true,
          "siteKey": "",
          "minimumScore": 0.5
        },
        "rateLimit": {
          "enabled": true,
          "maxEditsPerHour": 5,
          "windowMinutes": 60
        },
        "emailVerification": {
          "codeExpiryMinutes": 10,
          "tokenExpiryHours": 24,
          "codeLength": 6
        },
        "emailService": {
          "provider": "sendgrid",
          "fromEmail": "noreply@slayerlegend.wiki",
          "fromName": "Slayer Legend Wiki"
        },
        "storage": {
          "provider": "github-issues",
          "verificationLabel": "email-verification",
          "cleanupDays": 1
        },
        "labels": ["anonymous-edit", "needs-review"]
      },
      "contentModeration": {
        "enabled": true,
        "checkAnonymousEdits": true,
        "checkAuthenticatedEdits": false,
        "checkDisplayName": true,
        "checkEditSummary": true,
        "checkPageContent": true,
        "maxContentLength": 5000
      },
      "permissions": {
        "requireAuth": false,
        "fallbackToFork": true,
        "allowDirectCommit": true,
        "allowDirectCommitDelete": false
      }
    },
    "contributorHighscore": {
      "enabled": true,
      "cacheMinutes": 30,
      "displayLimit": 100,
      "ignoreRepositoryOwner": true,
      "ignoreMainContributors": false
    },
    "achievements": {
      "enabled": true,
      "checking": {
        "checkOnLogin": true,
        "checkOnBuildSave": true,
        "checkOnLoadoutSave": true,
        "checkOnSnapshotUpdate": true
      },
      "limits": {
        "maxChecksPerHour": 10
      }
    },
    "maintenance": {
      "enabled": false,
      "title": "Maintenance in Progress",
      "message": "We're currently performing scheduled maintenance to improve your experience.",
      "details": null,
      "estimatedReturn": null,
      "contactEmail": null,
      "showContactInfo": false,
      "allowAdminBypass": true,
      "customHtml": null
    },
    "donation": {
      "enabled": true,
      "prompt": {
        "minTimeOnSite": 60,
        "minPagesViewed": 3,
        "daysUntilNextPrompt": 2
      },
      "methods": {
        "stripe": {
          "enabled": false,
          "url": ""
        },
        "paypal": {
          "enabled": true,
          "url": "https://paypal.me/bendolus"
        },
        "kofi": {
          "enabled": true,
          "url": "https://ko-fi.com/bendol"
        }
      }
    },
    "contentCreators": {
      "enabled": true,
      "streamers": {
        "enabled": true,
        "allowSubmissions": true,
        "requireApproval": true,
        "platforms": ["twitch", "youtube"],
        "rateLimit": {
          "maxSubmissionsPerHour": 5
        },
        "showOnHomePage": true,
        "homePageLimit": 3
      },
      "videoGuides": {
        "enabled": true,
        "allowSubmissions": true,
        "requireAuthentication": true,
        "requireApproval": true,
        "dataFile": "public/data/video-guides.json",
        "categories": ["beginner", "intermediate", "advanced", "pvp", "pve", "farming"],
        "difficulties": ["beginner", "intermediate", "advanced", "expert"],
        "tags": ["tutorial", "guide", "tips", "strategy", "build", "farming", "pvp", "pve"],
        "showOnHomePage": true,
        "homePageLimit": 6
      },
      "showInSidebar": true,
      "sidebarPosition": "top"
    }
  },
