{
  "name": "my-wiki",
  "version": "1.0.0",
  "description": "My custom wiki built with GitHub Wiki Framework",
  "type": "module",
  "scripts": {
    "predev": "node scripts/killDevServer.js && node scripts/injectVersion.js",
    "dev": "concurrently --kill-others --names \"CONFIG,VITE,WRANGLER\" --prefix-colors \"cyan,blue,yellow\" \"npm:dev:watch\" \"npm:dev:vite-cf\" \"npm:dev:wrangler\"",
    "dev:watch": "node scripts/watchConfig.js",
    "dev:vite-cf": "cross-env VITE_DEV_PLATFORM=cloudflare vite",
    "dev:wrangler": "wrangler pages dev public --port 8788",
    "dev:vite-only": "concurrently --kill-others --names \"CONFIG,VITE\" --prefix-colors \"cyan,blue\" \"npm:dev:watch\" \"npm:dev:vite-cf\"",
    "dev:netlify": "concurrently --kill-others --names \"CONFIG,VITE,NETLIFY\" --prefix-colors \"cyan,blue,green\" \"npm:dev:watch\" \"npm:dev:netlify-vite\" \"npm:dev:netlify-server\"",
    "dev:netlify-vite": "cross-env VITE_DEV_PLATFORM=netlify vite",
    "dev:netlify-server": "netlify dev",
    "dev:vite": "concurrently --kill-others --names \"CONFIG,VITE\" --prefix-colors \"cyan,green\" \"npm:dev:watch\" \"vite\"",
    "prebuild": "node scripts/checkCommitForCachePurge.js && node scripts/injectVersion.js && node scripts/buildSearchIndex.js && node scripts/generate-sitemap.js",
    "build": "cross-env VITE_PLATFORM=cloudflare VITE_CF_PAGES=1 vite build",
    "build:netlify": "cross-env VITE_PLATFORM=netlify vite build",
    "build:cloudflare": "cross-env VITE_PLATFORM=cloudflare VITE_CF_PAGES=1 vite build",
    "build:sitemap": "node scripts/generate-sitemap.js",
    "preview": "vite preview",
    "preview:cloudflare": "npm run build && npx wrangler pages dev dist",
    "build:search": "node scripts/buildSearchIndex.js",
    "validate:html": "node wiki-framework/scripts/validateHtml.js",
    "test": "npm run test:framework && vitest run",
    "test:framework": "cd wiki-framework && npm test",
    "test:parent": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/integration --config vitest.config.integration.js",
    "test:ci": "npm run test:framework && npm run test:integration",
    "test:ci:optional": "npm run test:integration || echo 'Integration tests failed but continuing...'",
    "prebuild:cloudflare": "node scripts/cloudflare-prebuild.cjs",
    "test:sendgrid": "node scripts/testSendGrid.js"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.2.3",
    "@uiw/react-codemirror": "^4.21.21",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.0",
    "fuse.js": "^7.0.0",
    "github-wiki-framework": "file:./wiki-framework",
    "gray-matter": "^4.0.3",
    "leo-profanity": "^1.7.0",
    "lucide-react": "^0.562.0",
    "octokit": "^5.0.5",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.20.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@octokit/rest": "^22.0.1",
    "@tailwindcss/typography": "^0.5.10",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "netlify-cli": "^23.13.0",
    "postcss": "^8.4.32",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.19",
    "vite": "^5.0.8",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  }
}
